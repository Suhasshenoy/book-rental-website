<%- include('partials/header'); -%>

<h1 class="mt-3">Books Available</h1>
<div class="row mt-3 text-center">
    <% books.forEach(book=>{%>
        <div class="col-lg-4 col-md-6 col-sm-12 mt-3">
            <div class="card" >
                <img src="<%=book.bookImage%> " class="card-img-top crop" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%=book.bookName%></h5>
                  <h6 class="card-text mt-3"><strong>Lenders Name:   </strong> <%=book.ownerName%></h6>
                  <h6 class="card-text mt-3"><strong>Class:   </strong> <%=book.class%></h6>
                  <h6 class="card-text mt-3"><strong>Subject: </strong> <%=book.Subject%></h6>
                  <h6 class="card-text"><strong>Contact Info:</strong> <%=book.contactInfo%></h6>
                    
                  <a href="/rentBook/<%=book._id%>" class="btn btn-dark mt-2">Borrow it</a>
                </div>
              </div>
        </div>
    <%})%>
</div>

<%- include('partials/footer'); -%>