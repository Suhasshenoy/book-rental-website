<%- include('partials/header'); -%>

<h1 class="mt-3">Lend a book</h1>
<form method="POST" action="/lendBook" enctype="multipart/form-data">
    <div class="form-group">
        <label for="bookTitle"> <strong> Book Name</strong></label>
        <input type="text" class="form-control" id="bookTitle" name="bookName"><br>
        <label for="class"><strong>Class</strong></label>
        <input type="text" class="form-control" id="class" name="class"><br>
        <label for="subject"> <strong>Subject</strong> </label>
        <input type="text" class="form-control" id="subject" name="subject"><br>
        <label for="userName"><strong>Your Name</strong></label><br>
        <input type="text" class="form-control" id="userName" name="luserName"><br>

        <label for="contactInfo"><strong>Your Email id</strong>  </label><br>
        <input type="text" class="form-control" id="contactInfo" name="lemail"><br>

        <label for="bookImage"><strong>Upload Image of the Book</strong>  </label><br>
        <input type="file"  name="image" class="mt-2" /><br>
    </div>

    <button type="submit" class="btn btn-dark mt-3">Post</button>
</form>
